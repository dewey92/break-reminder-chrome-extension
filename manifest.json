{
  "manifest_version": 2,

  "name"        : "Break Reminder",
  "description" : "This extension will notify you when to break",
  "version"     : "1.0",
  "author"      : "dewey92",

  "browser_action": {
    "default_icon"  : "icon.png",
    "default_popup" : "popup.html"
  },
  "permissions": [
   "activeTab",
   "notifications",
   "storage",
   "alarms"
  ],

  "background": {
    "scripts"    : ["background.js"],
    "persistent" : false
  }
}